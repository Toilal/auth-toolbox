{
  "name": "auth-toolbox",
  "version": "0.0.0-development",
  "description": "The developer toolbox for HTTP Client Authentication.",
  "keywords": [
    "authentication",
    "http",
    "rest",
    "jwt",
    "oauth",
    "axios",
    "request"
  ],
  "main": "dist/auth-toolbox.umd.js",
  "module": "dist/auth-toolbox.esm.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "lib": "dist/lib"
  },
  "author": "RÃ©mi Alvergnat <toilal.dev@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Toilal/auth-toolbox"
  },
  "license": "MIT",
  "scripts": {
    "barrels": "barrelsby --config ./.barrelsby.json",
    "lint": "eslint src test",
    "prebuild": "rimraf dist",
    "build": "npm run barrels && tsc && npm run rollup && npm run typedoc",
    "rollup": "rollup -c rollup.config.js",
    "typedoc": "typedoc --out docs --theme minimal --excludePrivate --exclude **/*.umd.ts src",
    "start": "rollup -c rollup.config.js -w",
    "test": "npm run barrels && jest --coverage --verbose",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock",
      "jest-date-mock"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "axios": "^0.21.1",
    "axios-mock-adapter": "^1.19.0",
    "barrelsby": "^2.2.0",
    "colors": "^1.4.0",
    "commitizen": "^4.2.4",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.28.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-config": "^27.0.4",
    "jest-date-mock": "^1.0.8",
    "jest-localstorage-mock": "^2.4.14",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^11.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.3.1",
    "prompt": "^1.1.0",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.51.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2"
  },
  "peerDependencies": {
    "axios": "^0.21.1",
    "jsonwebtoken": "^8.5.1"
  }
}
