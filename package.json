{
  "name": "auth-toolbox",
  "version": "0.0.0-development",
  "description": "The developer toolbox for HTTP Client Authentication.",
  "keywords": [
    "authentication",
    "http",
    "rest",
    "jwt",
    "oauth",
    "axios",
    "request"
  ],
  "main": "dist/auth-toolbox.umd.js",
  "module": "dist/auth-toolbox.esm.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "lib": "dist/lib"
  },
  "author": "RÃ©mi Alvergnat <toilal.dev@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Toilal/auth-toolbox"
  },
  "license": "MIT",
  "scripts": {
    "barrels": "barrelsby --config ./.barrelsby.json",
    "lint": "eslint src test",
    "clean": "rimraf dist docs coverage",
    "build": "rimraf dist && yarn barrels && tsc -p tsconfig.build.json && yarn rollup && yarn typedoc",
    "rollup": "rollup -c rollup.config.mjs",
    "typecheck": "tsc --noEmit",
    "typedoc": "rimraf docs && typedoc --out docs --excludePrivate src",
    "start": "rollup -c rollup.config.mjs -w",
    "test": "yarn barrels && jest --coverage --verbose ./test",
    "test:watch": "jest --coverage --watch ./test",
    "test:prod": "yarn lint && yarn test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupFiles": [
      "jest-localstorage-mock",
      "jest-date-mock"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|/test/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "axios": "^1.2.1",
    "axios-mock-adapter": "^1.21.2",
    "barrelsby": "^2.5.1",
    "colors": "^1.4.0",
    "commitizen": "^4.2.6",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.30.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-config": "^29.3.1",
    "jest-date-mock": "^1.0.8",
    "jest-localstorage-mock": "^2.4.25",
    "jwt-decode": "^3.1.2",
    "lint-staged": "^13.1.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.8.1",
    "prompt": "^1.3.0",
    "replace-in-file": "^6.3.5",
    "rimraf": "^3.0.2",
    "rollup": "^3.8.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "semantic-release": "^19.0.5",
    "shelljs": "^0.8.5",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.23",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "axios": "^1",
    "jwt-decode": "^3"
  },
  "packageManager": "yarn@3.3.1"
}
