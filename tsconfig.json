{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "./test/types"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist",
    "docs",
    "coverage",
    "**/*.umd.ts"
  ]
}
